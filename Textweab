    <script>
        function sharePost() {
            const postUrl = window.location.href; // الحصول على رابط المقال
            const postTitle = document.title; // الحصول على عنوان المقال
            const shareText = "تعرف على كيفية استخدام مواقع التواصل الاجتماعي بشكل فعال!";
            
            // مشاركة المقال على الانستجرام
            const shareLink = `https://www.instgram.com/sharer/sharer.php?u=${encodeURIComponent(postUrl)}`;
            window.open(shareLink, '_blank', 'width=600,height=400');
        }
